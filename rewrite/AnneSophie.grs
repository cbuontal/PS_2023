}
rule change_compobj_with_conjdicto {
pattern { N [upos=PRON, lemma="le"]; V [upos=VERB]; e: V-[conj:dicto]->N; S[upos=PRON,
lemma="le"]; V-[comp:obj]->S }
commands {del_edge e; add_edge S-[conj:dicto]->N}
}
